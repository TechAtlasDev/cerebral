---
import Layout from "../layouts/Layout.astro";
import Barra from "../components/Barra.astro";
---

<Layout>
	<main class="w-screen h-screen flex flex-row">
		<Barra />
		<div
			class="w-full h-screen flex flex-col items-center justify-center gap-10">
			<div class="w-2/3 h-2/5 skeleton"></div>
			<div class="w-1/2 bg-base-200 p-10 rounded-2xl flex flex-col gap-3">
				<h2 class="text-2xl font-bold">Results:</h2>
				<div class="flex flex-col items-center gap-3">
					<div class="w-80 flex items-center gap-2">
						<span class="w-20">Label 1</span>
						<progress
							class="progress progress-primary flex-1"
							value="10"
							max="100"></progress>
						<span class="w-10 text-right">10%</span>
					</div>

					<div class="w-80 flex items-center gap-2">
						<span class="w-20">Label 2</span>
						<progress
							class="progress progress-primary flex-1"
							value="40"
							max="100"></progress>
						<span class="w-10 text-right">40%</span>
					</div>

					<div class="w-80 flex items-center gap-2">
						<span class="w-20">Label 3</span>
						<progress
							class="progress progress-primary flex-1"
							value="70"
							max="100"></progress>
						<span class="w-10 text-right">70%</span>
					</div>

					<div class="w-80 flex items-center gap-2">
						<span class="w-20">Label 4</span>
						<progress
							class="progress progress-primary flex-1"
							value="100"
							max="100"></progress>
						<span class="w-10 text-right">100%</span>
					</div>
				</div>
			</div>
		</div>
	</main>
</Layout>
